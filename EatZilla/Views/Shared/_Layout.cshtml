</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbg navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EatZilla</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dishes" asp-action="Index">Dishes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Resturant" asp-action="index">All Resturants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dish" asp-action="index">Menu</a>
                        </li>

                        <li class="nav-item ml-auto">
                            <!-- ml-auto class aligns the item to the right -->
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Dashboard">Profile</a>
                        </li>
                    </ul>
                    <ul class="nav justify-content-end">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Profile</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"> My Profile</a></li>
                                <li><a class="dropdown-item" href="#">History</a></li>
                                <li><a class="dropdown-item" href="#">Offers</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" class="btn btn-danger" href="#">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                        @{
                            var httpContext = Context.Request.HttpContext;
                            int? userId = httpContext.Session.GetInt32("UserId");
                            string fullName = httpContext.Session.GetString("FullName");

                            if (userId != null && fullName != null)
                            {
                                <h4>Welcome, @fullName!</h4>
                               // <p>Email: @userId</p>
                            }
                            else
                            {
                               // <p>Error retrieving user information.</p>
                            }
                        }

                
                </div>
            </div>
        </nav>
    </header>
